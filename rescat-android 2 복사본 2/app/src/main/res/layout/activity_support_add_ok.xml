<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.helpcat.SupportAddOkActivity">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/btn_support_apply_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit"
                    android:layout_marginRight="32dp"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:id="@+id/text_help_apply_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후원 등록"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:layout_weight="1"
                    android:textSize="20sp"/>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4a4a4a"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="132dp"
            tools:text="후원 등록 정보 작성이\n완료되었습니다!"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_support_add_ok"
            android:src="@drawable/img_coffee" android:layout_alignParentEnd="true" android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="47dp"/>

    <RelativeLayout
            android:id="@+id/btn_support_ok_gohome"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/caramel"
            android:layout_alignParentBottom="true">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="홈으로"
                android:textAlignment="center"/>
    </RelativeLayout>

</RelativeLayout>