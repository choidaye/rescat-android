<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:orientation="vertical"
        android:id="@+id/bottomSheet"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <View
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@id/text_bottom_sheet_delete" />

    <TextView
            android:id="@+id/text_bottom_sheet_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_trash"
            android:drawableStart="@drawable/ic_trash"
            android:text="삭제하기"
            android:textSize="16sp" />

    <View
            android:id="@+id/facebookView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbdbd"
            app:layout_constraintTop_toBottomOf="@id/text_bottom_sheet_delete" />

    <TextView
            android:id="@+id/text_bottom_sheet_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="신고하기"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_exclam"
            android:drawableStart="@drawable/ic_exclam"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/facebookView" />

</LinearLayout>