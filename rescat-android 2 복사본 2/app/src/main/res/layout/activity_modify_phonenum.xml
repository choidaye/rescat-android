<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.mypage.ModifyPhonenumActivity">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_toRightOf="@+id/btn_ac_modify_my_nickname_back"
                    android:text="전화번호"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/btn_ac_modify_my_nickname_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:textSize="18sp"
                    android:textColor="#4a4a4a"
                    android:text="완료"/>


            <ImageView
                    android:id="@+id/btn_ac_modify_my_nickname_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginRight="19dp"
                    android:layout_alignParentLeft="true"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>


    <TextView
            android:id="@+id/tv_ac_modify_my_phonenum_input_title"
            android:text="전화번호 인증 후 인증번호를 입력하세요"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:textColor="#4a4a4a"/>

    <RelativeLayout
            android:id="@+id/rl_tv_ac_modify_my_phonenum_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_ac_modify_my_phonenum_input_title">

        <EditText
                android:id="@+id/tv_ac_modify_my_phonenum_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#9b9b9b"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:lineSpacingExtra="8sp"
                android:hint="전화 번호를 입력해주세요" />

        <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/button_caramel"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="문자완료"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4a4a4a"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/rl_tv_ac_modify_my_request_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/rl_tv_ac_modify_my_phonenum_input">

        <EditText
                android:id="@+id/tv_ac_modify_my_request_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#9b9b9b"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="8sp"
                android:hint="인증 번호를 입력해주세요" />

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4a4a4a"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>




</RelativeLayout>