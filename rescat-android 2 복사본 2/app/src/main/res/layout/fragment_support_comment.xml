<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.helpcat.adopt.ProtectCommentFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:id="@+id/nestedScrollView">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/rv_support_comment"/>

    </android.support.v4.widget.NestedScrollView>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#1e000000"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

        <EditText
                android:id="@+id/edit_support_comment"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:textColor="#61000000"
                android:lineSpacingExtra="8sp"
                android:hint="댓글을 남겨보세요 :)"
        />
        <ImageView
                android:id="@+id/btn_support_comment_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0px"
                android:background="@drawable/ic_message_off"
                android:layout_gravity="center"
        />

    </LinearLayout>


</LinearLayout>