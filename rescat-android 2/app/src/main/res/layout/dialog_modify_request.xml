<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_width="280dp"
        android:layout_height="160dp">


    <TextView
            android:id="@+id/tv_diolog_add_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textColor="#de000000"
            android:text="수정 요청 완료"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#8a000000"
            android:lineSpacingExtra="10sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_diolog_add_request_title"
            android:layout_marginTop="12dp"
            android:text="24시간 내에 관리자 승인 후, 등록 결과가\n 마이페이지 > 우체통으로 전달됩니다"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rg_dialog_my_address"
            android:background="#1e000000"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:lineSpacingExtra="10sp"
            android:layout_alignParentBottom="true">


        <TextView
                android:id="@+id/btn_dialog_my_address_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_dialog_my_address_ok"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginRight="6dp"
                android:textSize="14sp"
                android:textColor="#6e4d37"
                android:letterSpacing="0.04"
                android:text="취소"/>

        <TextView
                android:id="@+id/btn_dialog_my_address_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                android:textColor="#6e4d37"
                android:letterSpacing="0.04"
                android:text="완료"/>

    </RelativeLayout>



</RelativeLayout>