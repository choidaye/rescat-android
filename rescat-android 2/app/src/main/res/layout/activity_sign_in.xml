<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.sign.SignInActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
                android:id="@+id/btn_login_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:background="#FFFFFF"
                android:padding="16dp"
                app:srcCompat="@drawable/ic_back" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="48dp"
                android:layout_gravity="left"
                android:text="로그인"
                android:fontFamily="sans-serif"
                android:textColor="#4a4a4a"
                android:textSize="20sp"
                android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_ac_sign_in_id"
            android:hint="아이디" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:textSize="16sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_ac_sign_in_pw"
            android:hint="비밀번호" android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_ac_sign_in_id" android:textSize="16sp"/>
    <Button
            android:id="@+id/btn_login_go"
            android:text="로그인하기"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/et_ac_sign_in_pw"
            android:background="@drawable/button_caramel"/>
</android.support.constraint.ConstraintLayout>