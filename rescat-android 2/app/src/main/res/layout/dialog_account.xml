<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_width="270dp"
        android:layout_height="344dp">


    <TextView
            android:id="@+id/tv_diolog_add_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textColor="#de000000"
            android:text="은행을 선택해주세요"/>


   <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:layout_below="@+id/tv_diolog_add_request_title">

       <RadioButton
               android:id="@+id/rb_dialog_kakao"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:textSize="16sp"
               android:layout_marginLeft="25dp"
               android:textColor="#de000000"
               android:text="카카오 뱅크"/>

       <RadioButton
               android:id="@+id/rb_dialog_NH"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:textSize="16sp"
               android:textColor="#de000000"
               android:layout_marginLeft="25dp"
               android:text="NH농협"/>

       <RadioButton
               android:id="@+id/rb_dialog_sinhan"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:textSize="14sp"
               android:textColor="#de000000"
               android:layout_marginLeft="25dp"
               android:text="신한"/>

       <RadioButton
               android:id="@+id/rb_dialog_IBK"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:textSize="16sp"
               android:textColor="#de000000"
               android:layout_marginLeft="25dp"
               android:text="IBK기업"/>

       <RadioButton
               android:id="@+id/rb_dialog_woori"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:textSize="16sp"
               android:textColor="#de000000"
               android:layout_marginLeft="25dp"
               android:text="우리"/>



   </RadioGroup>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:lineSpacingExtra="10sp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/rg_dialog_my_address">


        <TextView
                android:id="@+id/btn_dialog_account_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_dialog_account_ok"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginRight="6dp"
                android:textSize="14sp"
                android:textColor="#6e4d37"
                android:letterSpacing="0.04"
                android:text="취소"/>

        <TextView
                android:id="@+id/btn_dialog_account_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                android:textColor="#6e4d37"
                android:letterSpacing="0.04"
                android:text="완료"/>

    </RelativeLayout>



</RelativeLayout>