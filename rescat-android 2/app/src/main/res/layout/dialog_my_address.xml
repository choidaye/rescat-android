<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_width="270dp"
        android:layout_height="270dp">


    <TextView
            android:id="@+id/tv_diolog_my_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textColor="#de000000"
            android:text="지역을 선택해주세요"/>


    <RadioGroup
            android:id="@+id/rg_dialog_my_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/tv_diolog_my_address_title">

        <RadioButton
                android:id="@+id/rb_dialog_my_address_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="10sp"
                android:text="주소 1"/>


        <RadioButton
                android:id="@+id/rb_dialog_my_address_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="14sp"
                android:lineSpacingExtra="10sp"
                android:textColor="#de000000"
                android:text="주소 2"/>


        <RadioButton
                android:id="@+id/rb_dialog_my_address_3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:text="주소 3"/>


    </RadioGroup>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rg_dialog_my_address"
            android:background="#1e000000"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:lineSpacingExtra="10sp"
            android:layout_below="@id/rg_dialog_my_address">


        <TextView
                android:id="@+id/btn_dialog_my_address_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_dialog_my_address_ok"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginRight="6dp"
                android:textSize="14sp"
                android:textColor="#6e4d37"
                android:letterSpacing="0.04"
                android:text="취소"/>

        <TextView
                android:id="@+id/btn_dialog_my_address_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                android:textColor="#6e4d37"
                android:letterSpacing="0.04"
                android:text="완료"/>

    </RelativeLayout>



</RelativeLayout>