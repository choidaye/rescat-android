<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:id="@+id/rv_my_post_cafe_list_item"
         android:layout_height="112dp">

    <RelativeLayout
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:elevation="1dp"
            android:background="@color/pink">

        <TextView
                android:id="@+id/tv_my_post_care_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="6sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="임시보호"/>


    </RelativeLayout>

    <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp"
            app:srcCompat="@drawable/img_main_banner"
            android:id="@+id/iv_care_cat_photo"
            android:scaleType="centerCrop"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"/>


    <LinearLayout
            android:layout_toRightOf="@+id/iv_care_cat_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true">

        <TextView
                android:id="@+id/tv_my_post_care_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#4a4a4a"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                tools:text="레옹"/>

        <TextView
                android:id="@+id/tv_my_post_care_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:layout_marginRight="14dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp"
                tools:text="얼굴에 있는 얼룩이 특징인 레옹. 새로운 주인을 기다려요."/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="14dp">

        <TextView
                android:id="@+id/tv_my_post_care_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:gravity="end"
                android:text="1시간 전"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:gravity="end"
                android:layout_marginLeft="10dp"
                android:text="조회"/>

        <TextView
                android:id="@+id/tv_my_post_care_viewcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:gravity="end"
                android:layout_marginLeft="3dp"
                android:text="45"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:gravity="end"
                android:layout_marginLeft="2dp"
                android:text="회"/>



    </LinearLayout>




</RelativeLayout>