<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragment.helpcat.adopt.ProtectInfoFragment">


    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:background="@color/white">

            <android.support.v4.view.ViewPager
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/vp_adopt_info_banner"/>

            <com.rd.PageIndicatorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    app:piv_padding="8dp"
                    app:piv_radius="4dp"
                    app:piv_animationType="slide"
                    app:piv_dynamicCount="true"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="@color/pink"
                    app:piv_unselectedColor="@color/white"
                    app:piv_viewPager="@id/vp_adopt_info_banner"
                    android:id="@+id/pi_home_main_banner"
                    app:layout_constraintBottom_toBottomOf="@+id/vp_adopt_info_banner"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="안경을 쓰고 있는 애교 많은 고양이 레옹,\n새로운 집사를 기다립니다."
                    android:id="@+id/text_adopt_info_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/vp_adopt_info_banner" android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="보호기간"
                    android:id="@+id/textView_protect_period" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_adopt_info_content" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="이름"
                    android:id="@+id/textView4" android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_protect_period" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="추정나이"
                    android:id="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="품종"
                    android:id="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/textView11" android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="성별"
                    android:id="@+id/textView11"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="TNR"
                    android:id="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/textView7" android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="기초예방접종"
                    android:id="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/textView8" android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/caramel"
                    android:fontFamily="sans-serif-medium"
                    android:text="특이사항"
                    android:id="@+id/textView12"
                    app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_protect_period"
                    app:layout_constraintTop_toTopOf="@+id/textView_protect_period"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_protect_period"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/text_adopt_info_age"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_name"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/text_adopt_info_age"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    tools:text="레옹"
                    android:id="@+id/text_adopt_info_age"
                    app:layout_constraintTop_toTopOf="@+id/textView6"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/text_adopt_info_gender"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_uniqueness"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintStart_toStartOf="@+id/textView12" android:layout_marginTop="7dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_vaccination"
                    app:layout_constraintTop_toTopOf="@+id/textView9"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="46dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_tnr"
                    app:layout_constraintTop_toTopOf="@+id/textView8"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/text_adopt_info_vaccination"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_kind"
                    app:layout_constraintTop_toTopOf="@+id/textView7" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/text_adopt_info_tnr"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:text="레옹"
                    android:id="@+id/text_adopt_info_gender"
                    app:layout_constraintTop_toTopOf="@+id/textView11"
                    app:layout_constraintBottom_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/text_adopt_info_kind"/>
            <ImageView
                    android:src="@drawable/img_main_banner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_adopt_info" android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@+id/text_adopt_info_uniqueness"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="46dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>



    </android.support.v4.widget.NestedScrollView>


    <TextView
            android:id="@+id/btn_adopt_send"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:letterSpacing="0.04"
            android:gravity="center"
            android:text="입양할래요"
            android:background="@color/caramel"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>