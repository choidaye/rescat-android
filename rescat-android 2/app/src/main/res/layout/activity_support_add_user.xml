<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/btn_adopt_apply_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginRight="32dp"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:id="@+id/text_help_apply_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후원 등록"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:layout_weight="1"
                    android:textSize="20sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_adopt_complete"
                    android:text="임시 저장"
                    android:textColor="#4a4a4a"
                    android:layout_marginRight="24dp"
                    android:textSize="18sp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/nestedScrollView">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="22dp"
                    android:paddingHorizontal="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#4a4a4a"
                        android:layout_marginBottom="8dp"
                        android:text="2 | 사용자 정보" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:background="#4a4a4a"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#4a4a4a"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="이름"/>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_box_stroke">

                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#4a4a4a"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="-0.01"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:hint="김고양"/>
                </RelativeLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#4a4a4a"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="26dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="전화 번호"/>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_box_stroke">

                    <EditText
                            android:id="@+id/tv_support_add_simple_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#4a4a4a"
                            android:fontFamily="sans-serif"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:hint="01012345678"/>

                </RelativeLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#4a4a4a"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="26dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="후원 주최자 설명"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:background="@drawable/edit_box_stroke">

                    <EditText
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#4a4a4a"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:layout_marginTop="10dp"
                            android:hint="자기소개를 간략하게 해주세요.\n후원글 승인시 참고하는 용도로\n사용될 예정입니다. "/>
                </RelativeLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#4a4a4a"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="26dp"
                        android:text="계좌번호"/>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_box_stroke">

                    <EditText
                            android:id="@+id/tv_support_add_targe_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#c4c4c4"
                            android:fontFamily="sans-serif"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:text="은행을 선택해주세요"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_down"/>
                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_box_stroke"
                        android:layout_marginBottom="32dp">

                    <EditText
                            android:id="@+id/tv_support_add_limit_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#c4c4c4"
                            android:fontFamily="sans-serif"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:text="계좌번호를 입력해주세요"/>
                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                    android:id="@+id/btn_support_add_ok"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/caramel"
                    android:layout_alignParentBottom="true">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:text="작성 완료"
                        android:textAlignment="center"/>

            </RelativeLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>