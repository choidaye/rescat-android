<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="52dp">

    <RelativeLayout
            android:id="@+id/loction"
            android:layout_width="246dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/loction2"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/caramel_round_square">


        <TextView
                android:id="@+id/tv_ac_my_location_address"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:letterSpacing="-0.01"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/btn_ac_my_location_delete1"
                android:text="서울특별시 종로구 종로1.2.3.4가" />

        <ImageView
                android:id="@+id/btn_ac_my_location_delete1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_w"/>



    </RelativeLayout>

</RelativeLayout>