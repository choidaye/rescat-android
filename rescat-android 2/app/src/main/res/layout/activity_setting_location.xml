<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".ui.activity.mypage.SettingLocation">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_toRightOf="@+id/btn_ac_search_result_back"
                    android:text="지역설정"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:textSize="24sp"/>

            <ImageView
                    android:id="@+id/btn_ac_search_result_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_exit"
                    android:layout_marginRight="19dp"
                    android:layout_alignParentLeft="true"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#4a4a4a"
            android:gravity="center_horizontal"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="46dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:id="@+id/setting_location_title"
            android:text="현재 위치 설정"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#4a4a4a"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:id="@+id/setting_loction_info"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/setting_location_title"
            android:layout_marginTop="8dp"
            android:text="사용자의 현재 위치가 내 활동지역으로 자동 설정됩니다
마이페이지에서 지역을 추가로 등록할 수 있습니다"/>

    <RelativeLayout
            android:id="@+id/rl_ac_set_location_my"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/setting_loction_info"
            android:background="@drawable/caramel_round_square">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:letterSpacing="-0.01"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/btn_ac_my_location_delete3"
                android:text="서울시 노원구 공릉동" />

        <ImageView
                android:id="@+id/btn_ac_my_location_delete3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_renew"/>

    </RelativeLayout>


    <ImageView
            android:id="@+id/illust"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#fff5f0"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/rl_ac_set_location_my"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/btn_ac_set_loction_ok"
            android:text="완료"
            android:layout_width="3200dp"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="50dp"
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_caramel"/>



</RelativeLayout>