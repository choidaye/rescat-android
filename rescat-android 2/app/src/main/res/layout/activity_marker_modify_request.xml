<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.MarkerModifyRequestActivity">




    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:theme="?attr/actionBarTheme">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/btn_ac_search_result_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="수정 요청"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/btn_tv_ac_add_marker_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:text="다음"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>








    <LinearLayout
            android:id="@+id/ll_ac_add_marker_info"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:layout_marginLeft="22dp"
                android:text="수정사항을 입력해주세요"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp">

            <EditText
                    android:id="@+id/et_ac_add_marker_info_eat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:background="@null"
                    android:layout_marginLeft="22dp"
                    android:layout_centerVertical="true"
                    android:textColor="#61000000"
                    android:lineSpacingExtra="8sp"
                    android:hint="배식소 이름"/>

            <ImageView
                    android:id="@+id/btn_ac_modify_marker_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/ic_edit"/>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#1e000000"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp">

            <EditText
                    android:id="@+id/et_ac_add_marker_info_unique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="#61000000"
                    android:lineSpacingExtra="8sp"
                    android:layout_marginLeft="22dp"
                    android:hint="특이사항 (56자 이내)"/>


            <ImageView
                    android:id="@+id/btn_ac_modify_marker_food_unique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/ic_edit"/>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#1e000000"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>