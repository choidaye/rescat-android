<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="142dp">

    <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp" app:srcCompat="@drawable/img_main_banner"
            android:id="@+id/iv_my_post_fund"
            android:scaleType="centerCrop" android:layout_marginTop="14dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="피부염에 걸린 당근이"
            android:id="@+id/tv_fund_list_title" app:layout_constraintStart_toEndOf="@+id/iv_my_post_fund"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/iv_my_post_fund" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorAccent"
            android:letterSpacing="-0.01"
            android:text="치료비를 위한 여러분의 관심이 필요해요. 피부염에 걸린 당근이를 도와주세요."
            android:id="@+id/text_fund_list_content" app:layout_constraintStart_toStartOf="@+id/tv_fund_list_title"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_fund_list_title" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="4.2dp"
            android:id="@+id/view_fund_list_entire_percent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_my_post_fund" android:background="#ffe7d7"/>
    <View
            android:layout_width="0dp"
            android:layout_height="4.2dp"
            android:background="@color/pink"
            app:layout_constraintWidth_percent="0.5"
            android:id="@+id/view_fund_list_percent"
            app:layout_constraintStart_toStartOf="@+id/view_fund_list_entire_percent"
            app:layout_constraintTop_toTopOf="@+id/view_fund_list_entire_percent"
            app:layout_constraintBottom_toBottomOf="@+id/view_fund_list_entire_percent"
            app:layout_constraintEnd_toEndOf="@+id/view_fund_list_entire_percent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"
            android:text="50,0000원"
            android:id="@+id/text_fund_list_price" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/view_fund_list_entire_percent" app:layout_constraintStart_toStartOf="@+id/view_fund_list_percent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-light"
            android:text="19%"
            android:id="@+id/text_fund_list_percent" app:layout_constraintStart_toEndOf="@+id/text_fund_list_price"
            android:layout_marginStart="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_fund_list_price"
            app:layout_constraintTop_toTopOf="@+id/text_fund_list_price"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"
            android:gravity="end"
            android:text="43일 남음"
            android:id="@+id/text_fund_list_remain"
            app:layout_constraintTop_toTopOf="@+id/text_fund_list_percent"
            app:layout_constraintBottom_toBottomOf="@+id/text_fund_list_percent"
            app:layout_constraintEnd_toEndOf="@+id/view_fund_list_entire_percent"
    />
</android.support.constraint.ConstraintLayout>