<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.caretakerAuth.CareTakerPhotoAuthActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:textStyle="bold"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_caretaker_photo_prev"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="케어테이커 인증"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="270dp"
            android:layout_height="4dp"
            android:background="@color/pink" />

        <ImageView
            android:id="@+id/iv_status_lightPink"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/lightPink" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:text="3단계 실시간 사진 인증"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="케어테이커를 인증할 수 있는\n길냥이, 배식소 등의 사진을 촬영해주세요"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_caretaker_photo_frame"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:scaleType="fitXY"
            android:background="@drawable/btn_photo_add" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_caretaker_photo_finish"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_caramel"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>