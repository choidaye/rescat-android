<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.helpcat.AdoptCompleteActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/btn_adopt_apply_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit"
                    android:layout_marginRight="32dp"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:id="@+id/text_help_complete_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입양신청"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:layout_weight="1"
                    android:textSize="20sp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/text_help_complete_header_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="24sp"
                android:textSize="16sp"
                android:textColor="#4a4a4a"
                android:letterSpacing="-0.03"
                android:gravity="center_horizontal"
                android:text="임시보호 신청이 완료되었습니다\n당신의 아름다운 결정을 지지합니다!"
                android:layout_marginTop="50dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:letterSpacing="-0.03"
                android:gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="48dp"
                android:text="입력된 휴대폰 번호가 글 게시자에게 전달됩니다."
        />

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/img_tag_3"
        />

    </LinearLayout>

</LinearLayout>