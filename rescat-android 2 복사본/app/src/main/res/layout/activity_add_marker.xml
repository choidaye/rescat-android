<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.AddMarkerActivity">



    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:textStyle="bold"
            android:id="@+id/toolbar">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_toRightOf="@+id/btn_ac_search_result_back"
                    android:text="등록요청"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:textSize="24sp"/>

            <TextView
                    android:id="@+id/btn_tv_ac_add_marker_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:textSize="18sp"
                    android:textColor="#4a4a4a"
                    android:text="완료"/>


            <ImageView
                    android:id="@+id/btn_ac_search_result_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginRight="19dp"
                    android:layout_alignParentLeft="true"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>



    <LinearLayout
            android:id="@+id/ll_ac_add_marker_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/toolbar">


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_caramel_stroke"
                android:text="고양이"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_caramel_stroke"
                android:text="배식소"/>


    </LinearLayout>


    <LinearLayout
            android:id="@+id/ll_ac_add_marker_upload_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ll_ac_add_marker_select">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:textStyle="bold"
                android:text="사진을 업로드해주세요 (선택)"/>

        <ImageView
                android:id="@+id/btn_ac_add_marker_img_upload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_upload"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/ll_ac_add_marker_info"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ac_add_marker_upload_pic"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:text="정보를 입력해주세요"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp">

            <EditText
                    android:id="@+id/et_ac_add_marker_info_eat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="#61000000"
                    android:lineSpacingExtra="8sp"
                    android:hint="배식소 이름"/>

            <View
                    android:layout_width="320dp"
                    android:layout_height="1dp"
                    android:background="#1e000000"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp">

            <EditText
                    android:id="@+id/et_ac_add_marker_info_unique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="#61000000"
                    android:lineSpacingExtra="8sp"
                    android:hint="특이사항 (56자 이내)"/>

            <View
                    android:layout_width="320dp"
                    android:layout_height="1dp"
                    android:background="#1e000000"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>



    </LinearLayout>





</RelativeLayout>